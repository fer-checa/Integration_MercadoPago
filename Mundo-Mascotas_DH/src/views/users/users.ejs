<!DOCTYPE html>
<html lang="en">

<!--------------------- HEAD ----------------->
<%- include('../partials/head') %>

    <!--------------------- BODY ----------------->

    <body>
        <!--------------------- HEADER ----------------->
        <%- include('../partials/header') %>

            
            <!--------------------- MAIN ----------------->
            <main class="container">

                <h1>Usuarios Registrados: </h1>
                <a class="btn" href="/admin"><i class="fa-solid fa-circle-left"></i> Volver</a>
                <div class="box-usuarios">
                
                    <% for(let user of usuarios) { %>
                   
                    <div  class="user-container">
                        <a href="/user/edit/<%= user.id %> ">

                            <p class="user-font">Id: <%= user.id %>
                            </p>
                            <p class="user-font">Nombre: <%= user.name %>
                            </p>
                            <p class="user-font">Role : <%= user.roles.role %>
                            </p>
                            <!-- <p class="user-font">Password: <%= user.password %>
                            </p>
                            <p class="user-font">Repetir Password : <%= user.password %>
                            </p> -->

                            <figure >
                                <img class="box-imagen" src="/img/usersImage/<%= user.image %> " alt="imagen de usuario">
                            </figure>

                            

                            <!-- <div class="form-delete">
                                    <form action="/user/edit/delete/<%= user.id %>?_method=DELETE" method="POST"  >
                                     <button type="submit" class="boton-eliminar">Eliminar Usuario</button>
                                    </form>
                                </div> -->

                        </a>
                    </div>

                    <% } %>

                </div>


            </main>



    </body>

    <!--------------------- FOOTER ----------------->
    <%- include ('../partials/footer.ejs') %>

</html>